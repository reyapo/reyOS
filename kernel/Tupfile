include_rules

ARCH_OBJ  = arch/$(ARCH)/boot.o
ARCH_OBJ += arch/$(ARCH)/tty.o

CPPFLAGS  = -O2
CPPFLAGS += -g 
CPPFLAGS += -ffreestanding 
CPPFLAGS += -Wall 
CPPFLAGS += -Wextra

LFLAGS  = -nostdlib 
LFLAGS += -lgcc

: arch/$(ARCH)/linker.ld <kernel> |> !cpp -T arch/$(ARCH)/linker.ld -o %o $(CPPFLAGS) %<kernel> $(LFLAGS) |> reyOS.kernel
