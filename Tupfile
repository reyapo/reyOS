include_rules
	
GRUB = "\
menuentry "reyOS" {\n\
	multiboot /boot/reyOS.kernel\n\
}"

: kernel/reyOS.kernel |> cp %f %o |> isodir/boot/reyOS.kernel
: |> echo $(GRUB) > %o |> isodir/boot/grub/grub.cfg
: isodir isodir/boot/reyOS.kernel isodir/boot/grub/grub.cfg |> ^ grub %o^ grub-mkrescue -o %o isodir |> reyOS.iso
